        <Color x:Key="AcrylicTintColor">#202020</Color> 
        <Color x:Key="AcrylicFallbackColor">#202020</Color>
        
        <Color x:Key="AccentColor">#1DB954</Color>
        <SolidColorBrush x:Key="ThemeAccentBrush" Color="{StaticResource AccentColor}"/>
        
        <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="#181818" />
        <SolidColorBrush x:Key="ThemeForegroundBrush" Color="White" />
        <SolidColorBrush x:Key="ThemeControlLowBrush" Color="#252525" />
        <SolidColorBrush x:Key="ThemeBorderLowBrush" Color="#3A3A3A" />
        
